{
    "builds": [
      {
        "src": "next.config.js",
        "use": "@vercel/next"
      },
      {
        "src": "generate-sitemap.js",
        "use": "@vercel/node"
      }
    ],
     "rewrites": [{ "source": "/(.*)", "destination": "/" }], 
    "routes": [
      {
        "src": "/sitemap.xml",
        "dest": "/public/sitemap.xml"
      }
    ]
  }
  